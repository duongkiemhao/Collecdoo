<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp" android:id="@+id/navigationBar"
        android:background="@drawable/box_radious_shape"
        android:orientation="horizontal"
        android:padding="5dp" android:gravity="center_vertical"
        android:weightSum="6">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ico_back" />

        <LinearLayout
            android:layout_width="0dp" android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/call" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp" android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnDone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/done" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp" android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnStops"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stops" />
        </LinearLayout>


        <ImageView
            android:id="@+id/btnMap"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ico_map" />

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ico_next" />
    </LinearLayout>
</RelativeLayout>
