<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp" android:gravity="center_vertical"

    android:paddingTop="5dp" android:paddingRight="5dp">
    <TextView android:id="@+id/txtDate" android:layout_alignParentLeft="true"
        android:layout_width="40dp"  android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:textColor="@color/black" android:text="21.3"/>
    <TextView android:id="@+id/txtFrom" android:maxLines="1" android:layout_centerVertical="true"
        android:ellipsize="end" android:layout_toRightOf="@+id/txtDate"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black" android:text="A"/>
    <TextView android:layout_toRightOf="@+id/txtFrom" android:layout_centerVertical="true"
        android:layout_width="wrap_content" android:layout_marginLeft="10dp" android:layout_weight="2"
        android:layout_height="wrap_content" android:id="@+id/lblTo"
        android:textColor="@color/black" android:text="to"/>
    <TextView android:id="@+id/txtTo" android:maxLines="1" android:layout_toRightOf="@+id/lblTo"
        android:ellipsize="end" android:layout_centerVertical="true"
        android:layout_width="85dp" android:layout_weight="5"
        android:layout_height="wrap_content" android:layout_marginLeft="10dp"
        android:textColor="@color/black" android:text="B"/>
    <TextView android:id="@+id/txtPrice" android:layout_toLeftOf="@+id/btnDetail"
        android:layout_width="match_parent" android:layout_marginLeft="10dp" android:layout_weight="4"
        android:layout_centerVertical="true" android:gravity="right"
        android:layout_height="wrap_content" android:layout_toRightOf="@+id/txtTo"
        android:textColor="@color/black" android:text="5.80 Eur"/>
    <ImageView android:id="@+id/btnDetail"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"  android:src="@drawable/ico_next_bold"
        android:layout_height="wrap_content" />
</RelativeLayout>
