<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <RelativeLayout android:id="@+id/linearLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <include layout="@layout/logo" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content" android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imaPin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_pin_to" />
            <TextView
                android:id="@+id/txtTitle" android:background="@drawable/box_shape"
                android:layout_width="wrap_content" android:paddingLeft="30dp"
                android:paddingRight="30dp" android:paddingTop="10dp" android:paddingBottom="10dp"
                android:layout_height="wrap_content" android:layout_centerVertical="true" android:gravity="center"
                android:layout_gravity="center"
                android:text="Receiver address:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout android:layout_above="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:orientation="vertical" android:id="@+id/linearLayout2"
            android:padding="10dp">


            <EditText android:hint="First name &amp; name"
                android:id="@+id/ediFirstName"
                style="@style/register_edittext"
                android:layout_width="match_parent"
                android:textColor="@color/black" />
            <AutoCompleteTextView
                android:id="@+id/txtFrom" android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:singleLine="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:maxLines="1" android:ellipsize="start"
                android:background="@drawable/box_shape"
                android:hint="From: Street, house no, city"
                android:imeOptions="actionNext" android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:padding="5dp" />


            <EditText android:layout_marginTop="10dp"
                android:id="@+id/ediTel"
                style="@style/register_edittext" android:hint="Telephone of receiver"
                android:layout_width="match_parent" android:inputType="number"
                android:textColor="@color/black" />
            <EditText android:layout_marginTop="10dp"
                android:id="@+id/ediAddress" android:gravity="top"
                style="@style/register_edittext" android:hint="Address option"
                android:layout_width="match_parent" android:layout_height="70dp" android:inputType="number"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment" android:layout_below="@+id/linearLayout0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <include layout="@layout/ok"/>
</RelativeLayout>

