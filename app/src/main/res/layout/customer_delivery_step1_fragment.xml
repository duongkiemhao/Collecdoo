<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <include layout="@layout/logo" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imaPin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_pin_from" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/box_shape"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="@string/customer_delivery_sender_title"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imaQuestion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ico_question" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout1"
            android:orientation="vertical"
            android:padding="10dp">


            <EditText
                android:id="@+id/ediFirstName"
                style="@style/register_edittext"
                android:layout_width="match_parent"
                android:hint="@string/customer_delivery_sender_name"
                android:textColor="@color/black" />

            <com.collecdoo.control.InstantAutoComplete
                android:id="@+id/txtFrom"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_shape"
                android:ellipsize="start"
                android:hint="@string/customer_delivery_sender_from"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/ediTel"
                style="@style/register_edittext"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:hint="@string/customer_delivery_sender_phone"
                android:inputType="number"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/ediAddress"
                style="@style/register_edittext"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:hint="@string/customer_delivery_sender_address"
                android:inputType="number"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnDatePicker"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/box_shape"
                    android:gravity="center"
                    android:lines="2"
                    android:padding="5dp"
                    android:text="@string/customer_delivery_sender_select_pickup"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/box_shape"
                    android:gravity="center"
                    android:lines="2"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_light" />
            </LinearLayout>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/customer_delivery_sender_package"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="2"
                android:progress="1"
                android:theme="@style/Theme.MyTheme" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_delivery_sender_small"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/customer_delivery_sender_medium"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/customer_delivery_sender_big"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/linearLayout2">

            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

            </FrameLayout>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:background="@color/white"
                android:text="@string/ok_next"
                android:textAllCaps="false"
                android:textColor="@color/red" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>