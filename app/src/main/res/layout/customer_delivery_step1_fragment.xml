<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <include layout="@layout/logo" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content" android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imaPin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_pin_from" />
        <TextView
            android:id="@+id/txtTitle" android:background="@drawable/box_shape"
            android:layout_width="wrap_content" android:paddingLeft="30dp"
            android:paddingRight="30dp" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true" android:gravity="center"
            android:layout_gravity="center"
            android:text="Sender address:"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/imaQuestion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ico_question" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical" android:id="@+id/linearLayout2"
        android:padding="10dp">


        <EditText android:hint="First name &amp; name"
            android:id="@+id/ediFirstName"
            style="@style/register_edittext"
            android:layout_width="match_parent"
            android:textColor="@color/black" />
        <com.collecdoo.control.InstantAutoComplete
            android:id="@+id/txtFrom" android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp" android:singleLine="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:maxLines="1" android:ellipsize="start"
            android:background="@drawable/box_shape"
            android:hint="From: Street, house no, city"
            android:imeOptions="actionNext" android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:padding="5dp" />


        <EditText android:layout_marginTop="10dp"
            android:id="@+id/ediTel"
            style="@style/register_edittext" android:hint="Telephone of sender"
            android:layout_width="match_parent" android:inputType="number"
            android:textColor="@color/black" />
        <EditText android:layout_marginTop="10dp"
            android:id="@+id/ediAddress" android:gravity="top"
            style="@style/register_edittext" android:hint="Address option"
            android:layout_width="match_parent" android:layout_height="80dp" android:inputType="number"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/box_shape"
                android:gravity="center"
                android:lines="2" android:id="@+id/btnDatePicker"
                android:padding="5dp"
                android:text="select pickup date &amp; time"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtDatePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/box_shape"
                android:gravity="center"
                android:lines="2"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black_light" />
        </LinearLayout>
        <TextView
            android:layout_width="110dp" android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_shape"
            android:gravity="center" android:padding="5dp"
            android:text="Package size:"
            android:textColor="@color/black" />
        <android.support.v7.widget.AppCompatSeekBar android:layout_marginTop="10dp" android:theme="@style/Theme.MyTheme"
            android:layout_width="match_parent" android:progress="1" android:max="2"
            android:layout_height="wrap_content" android:id="@+id/seekBar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content" android:text="small (&lt;60cm)"
                android:layout_height="wrap_content" android:textColor="@color/black"/>
            <TextView android:layout_centerHorizontal="true"
                android:layout_width="wrap_content" android:text="medium (&lt;110cm)"
                android:layout_height="wrap_content" android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content" android:text="big (&lt;130cm)"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" android:textColor="@color/black"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_below="@+id/linearLayout2"
        android:layout_height="250dp">
    <FrameLayout android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  android:id="@+id/fragment">

    </FrameLayout>
    <Button android:layout_marginBottom="60dp" android:layout_centerHorizontal="true" android:background="@color/white"
        android:layout_width="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/btnOk" android:textColor="@color/red"
        android:layout_height="35dp" android:textAllCaps="false" android:text="Ok &amp; Next" />
    </RelativeLayout>
</RelativeLayout>
</ScrollView>