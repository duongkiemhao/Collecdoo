<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">
    <ImageView
        android:layout_width="30dp" android:id="@+id/imaPin"
        android:layout_height="30dp" android:src="@drawable/ico_pin_from"/>
    <TextView android:layout_toRightOf="@+id/imaPin" android:layout_marginLeft="10dp"
        android:layout_width="wrap_content" android:id="@+id/txtName" android:text="Mr.John,"
        android:layout_height="wrap_content" android:textColor="@color/black"/>
    <TextView android:layout_toRightOf="@+id/txtName" android:layout_marginLeft="10dp"
        android:layout_width="wrap_content" android:id="@+id/txtMobile" android:text="mobile:09139999233"
        android:layout_height="wrap_content" android:textColor="@color/black"/>
    <TextView android:layout_below="@+id/txtName" android:layout_toRightOf="@+id/imaPin" android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
        android:layout_width="wrap_content" android:id="@+id/txtAddress" android:text="Bach Str. 13,Bonn"
        android:layout_height="wrap_content" android:textColor="@color/black"/>
</RelativeLayout>
