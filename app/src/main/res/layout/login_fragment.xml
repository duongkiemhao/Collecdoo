<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:padding="5dp">

    <include layout="@layout/logo" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content" android:padding="5dp"
        android:layout_height="wrap_content" android:background="@drawable/box_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Collecdoo login"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout android:layout_above="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        android:orientation="vertical" android:id="@+id/linearLayout2"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_margin_top"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/register_label_width"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/ediEmail"
                style="@style/register_edittext"
                android:layout_width="match_parent"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_margin_top"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/register_label_width"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/ediPassword"
                style="@style/register_edittext"
                android:layout_width="match_parent"
                android:textColor="@color/black" />
        </LinearLayout>
        <Button android:layout_gravity="center_horizontal" android:background="@drawable/box_shape"
            android:layout_width="wrap_content" android:id="@+id/btnLogin" android:textColor="@color/black"
            android:layout_marginTop="20dp" android:textAllCaps="false"
            android:layout_height="35dp" android:text="Login" />

        <TextView android:layout_marginTop="20dp" android:id="@+id/btnRegister"
            android:layout_width="wrap_content" android:textColor="@color/black"
            android:layout_height="wrap_content" android:text="New registration?"/>
        <TextView android:layout_marginTop="15dp" android:id="@+id/btnForgetPass"
            android:layout_width="wrap_content" android:textColor="@color/black"
            android:layout_height="wrap_content" android:text="Forget password?"/>
    </LinearLayout>

</RelativeLayout>
